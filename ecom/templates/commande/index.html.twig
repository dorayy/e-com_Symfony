{% extends 'base.html.twig' %}

{% block title %}{{ 'Commande.Titre'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Commande.Nom'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Global.Nom'|trans }}</th>
                <th>{{ 'Global.Quantite'|trans }}</th>
                <th>{{ 'Global.Prix'|trans }}</th>
                <th>{{ 'Global.Montant'|trans }}</th>
                <th>{{ 'Global.DateAchat'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commande_detail %}
            <tr>
                {% set montant = 0 %}
                    <td>{{ commande.nom }}</td>
                    <td>{{ commande.quantite }}</td>
                    <td>{{ commande.prix }}</td>
                    {% set montant = commande.quantite * commande.prix %}
                    <td>{{ montant }}</td>
                    <td>{{ commande.dateAchat ? commande.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('compte_commande') }}">{{ 'Global.Retour'|trans }}</a>

{% endblock %}
