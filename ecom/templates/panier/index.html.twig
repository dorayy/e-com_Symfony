{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <h1>Panier index</h1>

    {% set montantTotal = 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
            {% if panier.etat == false %}
                {% for contenu in panier.contenuPaniers %}
                    {% set montant = 0 %}
                        <td>{{ contenu.produit.nom }}</td>
                        <td>{{ contenu.quantite }}</td>
                        <td>{{ contenu.produit.prix }}</td>
                        {% set montant = contenu.quantite * contenu.produit.prix %}
                        <td>{{ montant }}</td>
                        <td>
                            {% if isAdmin == 1 %}
                                <p><a class="btn btn-outline-secondary btn-sm" href="{{ path('panier_edit', {'id': panier.id}) }}">edit</a></p>                          
                            {% endif %}
                            <form method="post" action="{{ path('contenu_panier_delete', {'id': contenu.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contenu.id) }}">
                                <button class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </td>
                        {% set montantTotal = montantTotal + montant %}
                    </tr>
                {% else %}
                        <td colspan="4">no records found</td>
                        <td>
                            {% if isAdmin == 1 %}
                                <p><a class="btn btn-outline-secondary btn-sm" href="{{ path('panier_edit', {'id': panier.id}) }}">edit</a></p>                          
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">Votre pannier est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h5> Montant à payer : {{ montantTotal }} </h5>

    {% for panier in paniers %}
        {% if panier.etat == false %}
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('panier_achat', {'id': panier.id}) }}">Acheter vos produits</a>
        {% endif %}
    {% endfor %}

    {% if isAdmin == 1 %}
        <a href="{{ path('panier_new' ) }}">Create new</a>
     {% endif %}
{% endblock %}
