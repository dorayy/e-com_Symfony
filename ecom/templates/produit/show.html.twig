{% extends 'base.html.twig' %}

{% block title %}{{ 'Produit.Titre.Show'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Produit.Nom.Show'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Global.Id'|trans }}</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Global.Nom'|trans }}</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>{{ 'Global.Description'|trans }}</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Global.Prix'|trans }}</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>{{ 'Global.Stock'|trans }}</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>{{ 'Global.Photo'|trans }}</th>
                <td>{{ produit.photo }}</td>
            </tr>
        </tbody>
    </table>
    
    {{ form(form) }}

    <a class="btn btn-primary"  href="{{ path('produit_index') }}">{{ 'Global.Retour'|trans }}</a>

    {% if isAdmin == 1 %}
    <a class="btn btn-primary" href="{{ path('produit_edit', {'id': produit.id}) }}">{{ 'Global.Modifier'|trans }}</a>
    {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
