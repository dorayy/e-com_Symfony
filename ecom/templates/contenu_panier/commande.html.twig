{% extends 'base.html.twig' %}

{% block title %}ContenuPanier{% endblock %}

{% block body %}

    <h1>Mes commandes</h1>
 
    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Montant</th>
                <th>Date Achat</th>
            </tr>
        </thead>
        <tbody>
        {% for p in panier %}
            {% set sum = 0 %}
            <tr>
                <td><a style="text-decoration: none;" href="{{ path('commande_detail', {"id": p.id })}}">{{ p.id }} </a> </td>
                {% for contenu in contenu_panier %}
                    {% if p.id == contenu.id %}
                        {% set sum = sum + (contenu.prix * contenu.quantite) %}
                    {% endif %}
                {% endfor %} 
                <td>{{ sum }}</td>
                <td>{{ p.dateAchat ? p.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-secondary" href="{{ path('compte_accueil') }}">back</a>
{% endblock %}
